{% if breadcrumb %}
  <nav class="breadcrumb" role="navigation">
    <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
    <ol>
    {% for item in breadcrumb %}
        {% if item.url != "/" %}
          <li>
            {% if item.url %}
              <a href="{{ item.url }}">{{ item.text }}</a><i class="fas fa-chevron-right" role="presentation"></i>
            {% else %}
              {{ item.text }}
            {% endif %}
          </li>
      {% endif %}
    {% endfor %}
    </ol>
  </nav>
{% endif %}